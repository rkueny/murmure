{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "murmure",
  "version": "1.2.0",
  "identifier": "com.al1x-ai.murmure",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Murmure",
        "width": 920,
        "height": 768,
        "minWidth": 870,
        "minHeight": 720
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../resources/**/*"
    ]
  }
}